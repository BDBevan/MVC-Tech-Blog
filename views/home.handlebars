<h1>Welcome to My Tech Blog</h1>

<nav>
    <ul>
        <li><a href="/">Home</a></li> <!-- Link to the home page -->
        <li><a href="/auth/login">Dashboard</a></li> <!-- Link to the dashboard -->
        <li><a href="/auth/login">Login</a></li> <!-- Link to the login page -->
    </ul>
</nav>

{{#if posts.length}}
    <h2>Recent Posts:</h2>
    <ul>
        {{#each posts}}
            <li>
                <a href="/posts/{{this.id}}">{{this.title}}</a>
                <p>Posted on: {{this.createdAt}}</p>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No blog posts available yet. <a href="/posts/new">Create your first post!</a></p>
{{/if}}

