{{! Extend the main layout }}
{{#extend 'layouts/main'}}
{{#set 'title'}}Home{{/set}}

<h1>Welcome to My Tech Blog</h1>

{{#if posts.length}}
    <h2>Existing Posts:</h2>
    <ul>
        {{#each posts}}
            <li>
                <a href="/posts/{{this.id}}">{{this.title}}</a>
                <p>Posted on: {{this.createdAt}}</p>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No blog posts available yet. <a href="/posts">Create your first post!</a></p>
{{/if}}

{{/extend}}
